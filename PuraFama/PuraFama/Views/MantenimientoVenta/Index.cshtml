@model IEnumerable<PuraFama.Models.venta>

@{
    ViewBag.Title = "Index";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cliente.nombre_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.servicio.nombre_servicio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cliente.nombre_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.servicio.nombre_servicio)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_venta }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_venta }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_venta })
        </td>
    </tr>
}

</table>
